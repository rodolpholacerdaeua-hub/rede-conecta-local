{
    "name": "player-windows",
    "version": "20.0.1",
    "description": "Rede Conecta - Digital Signage Player (Offline-First, Cross-Platform)",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite --port 5180",
        "build": "vite build",
        "electron:dev": "concurrently -k \"vite --port 5180\" \"node -e \\\"setTimeout(()=>require('child_process').spawn(require('electron'),['.']),3000)\\\"\"",
        "electron:build": "vite build && electron-builder",
        "electron:build:linux": "vite build && electron-builder --linux",
        "electron:build:win": "vite build && electron-builder --win",
        "preview": "vite preview"
    },
    "author": "Antigravity",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.49.1",
        "better-sqlite3": "^12.6.2",
        "electron-updater": "^6.3.9",
        "lucide-react": "^0.511.0",
        "node-mpv": "^1.5.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.0",
        "@vitejs/plugin-react": "^4.5.0",
        "7zip-bin": "^5.2.0",
        "concurrently": "^9.1.2",
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12",
        "node-7z": "^3.0.0",
        "vite": "^7.0.0"
    },
    "build": {
        "appId": "com.antigravity.redeconecta.player",
        "productName": "Rede Conecta Player",
        "directories": {
            "output": "dist-electron"
        },
        "publish": {
            "provider": "github",
            "owner": "rodolpholacerdaeua-hub",
            "repo": "rede-conecta-local"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "artifactName": "Rede-Conecta-Player-Setup-${version}.${ext}",
            "extraResources": [
                {
                    "from": "mpv/mpv.exe",
                    "to": "mpv/mpv.exe"
                },
                {
                    "from": "mpv/d3dcompiler_43.dll",
                    "to": "mpv/d3dcompiler_43.dll"
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "artifactName": "Rede-Conecta-Player-${version}.${ext}",
            "category": "Utility",
            "desktop": {
                "entry": {
                    "Name": "Rede Conecta Player",
                    "Comment": "Digital Signage Player",
                    "Terminal": "false",
                    "StartupWMClass": "rede-conecta-player"
                }
            }
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowToChangeInstallationDirectory": false,
            "allowElevation": false,
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": false
        }
    }
}